{
  "name": "dtimer",
  "version": "0.3.3",
  "description": "Distributed timer backed by Redis.",
  "main": "index.js",
  "scripts": {
    "test": "DEBUG=true nyc mocha --exit",
    "posttest": "eslint lib test; nyc check-coverage",
    "lint": "eslint lib test"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/enobufs/dtimer.git"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "debug": "~4.1.1",
    "lured": "~1.0.3",
    "redis": "~3.0.2",
    "underscore": "~1.11.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "async": "~3.2.0",
    "coveralls": "~3.1.0",
    "eslint": "^7.8.1",
    "nyc": "^15.1.0",
    "mocha": "~8.1.3",
    "sinon": "~9.0.3"
  },
  "keywords": [
    "timer",
    "timed",
    "scheduler",
    "event",
    "cluster",
    "redis"
  ],
  "author": "enobufs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/enobufs/dtimer/issues"
  },
  "homepage": "https://github.com/enobufs/dtimer",
  "eslintConfig": {
    "rules": {
      "callback-return": [
        2,
        [
          "callback",
          "cb",
          "next",
          "done"
        ]
      ],
      "camelcase": [
        2,
        {
          "properties": "never"
        }
      ],
      "comma-dangle": 0,
      "comma-spacing": [
        2,
        {
          "before": false,
          "after": true
        }
      ],
      "indent": [
        2,
        4,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "max-len": [
        1,
        120,
        4,
        {
          "ignoreComments": true,
          "ignoreUrls": true
        }
      ],
      "no-console": 0,
      "no-extra-boolean-cast": [
        0
      ],
      "no-new": 2,
      "no-spaced-func": [
        2
      ],
      "no-trailing-spaces": [
        2
      ],
      "no-unused-vars": [
        2,
        {
          "args": "all"
        }
      ],
      "no-use-before-define": [
        2,
        "nofunc"
      ],
      "semi": [
        2,
        "always"
      ],
      "space-after-keywords": [
        2,
        "always"
      ],
      "space-before-function-paren": [
        2,
        {
          "anonymous": "always",
          "named": "never"
        }
      ],
      "space-return-throw-case": 2
    },
    "env": {
      "node": true,
      "mocha": true
    },
    "extends": "eslint:recommended"
  }
}
